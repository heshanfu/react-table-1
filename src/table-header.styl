.table > .thead > .tr > .th {
    &[role="button"] {
        cursor: default;
        outline: 0;
    }

    &.sortable-highlight {
        color: #222;
    }

    &.sortable {
        &:hover {
            background-color: #e6e6e6;
            cursor: pointer;
        }

        .th-content {
            padding-right: 16px;
        }

        .order-asc,
        .order-desc {
            position: absolute;
            right: 0;
            vertical-align: top;
            margin-top: 1px;
            display: inline-block;
            width: 16px;
            height: 16px;
        }
        .order-asc {
            background-image: url("./icon-thSortAscending.svg");
        }
        .order-desc {
            background-image: url("./icon-thSortDescending.svg");
        }
    }
}
